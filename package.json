{
  "name": "api",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "run": "docker compose up -d",
    "run:dev": "docker compose -f docker-compose.dev.yaml up -d",
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register api/src/index.ts dotenv_config_path=.env",
    "dev:debug": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --transpile-only --respawn --inspect=4321 --project tsconfig.json src/index.ts dotenv_config_path=.env",
    "build": "rimraf ./build && tsc && tsc-alias",
    "start": "npm run build && node -r dotenv/config build/index.js dotenv_config_path=.env"
  },
  "lint-staged": {
    "./api/src/**/**/*.ts": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^13.0.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.10",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.2.2",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.2.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
